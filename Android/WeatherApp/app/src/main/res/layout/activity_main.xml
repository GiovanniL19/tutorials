<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="giovannilenguito.co.uk.androidweather.view.MainActivity">

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locaion"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/temp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="18sp" />

    <TextView
        android:text="Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/locaion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView29"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.04"
        android:text="Visibility:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.04"
        android:text="Clouds: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView31"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.04"
        android:text="Wind Speed:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView30"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.04"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/country"
        android:text="Wind Direction:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView35"
        android:text="Lows:"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/temp"
        android:layout_marginLeft="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView37"
        android:text="Highs: "
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/temp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <TextView
        android:text="Calm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windDes"
        android:textStyle="normal|bold"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/country"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView30"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windSpeed"
        android:textStyle="normal|bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/windDes"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toRightOf="@+id/textView31"
        android:layout_marginLeft="30dp" />

    <TextView
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clouds"
        android:textStyle="normal|bold"
        android:layout_marginStart="55dp"
        app:layout_constraintLeft_toRightOf="@+id/textView32"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/windSpeed" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visibility"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/clouds"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toRightOf="@+id/textView29"
        android:layout_marginLeft="48dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxTemp"
        android:textStyle="normal|bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/minTemp"
        android:layout_marginStart="11dp"
        app:layout_constraintLeft_toRightOf="@+id/textView37"
        android:layout_marginLeft="11dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minTemp"
        android:textStyle="normal|bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView35"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.94"
        android:textSize="30sp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/linearLayout2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <EditText
            android:layout_width="283dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_weight="1"
            android:hint="Location..."
            android:background="@android:color/background_light"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:id="@+id/weatherLocation" />

        <Button
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Go"
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:onClick="weatherRequest" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
